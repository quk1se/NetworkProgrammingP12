<Window x:Class="NetworkProgrammingP12.EmailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkProgrammingP12"
        mc:Ignorable="d"
        Title="EmailWindow" Height="450" Width="300">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Label Content="For:"/>
            <TextBox x:Name="textBoxTo" Text="alexandrkalyan953@gmail.com" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Theme:"/>
            <TextBox x:Name="textBoxSubject" Text="Hello from Somalia" VerticalAlignment="Center"/>
        </StackPanel>
        <TextBox x:Name="textBoxMessage" Text="I am a surgeon" TextWrapping="Wrap"/>
        <Button x:Name="SendButton1" Content="Send" Click="SendButton1_Click"/>
    </StackPanel>
</Window>
